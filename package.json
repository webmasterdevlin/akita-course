{
  "name": "akita-course",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve",
    "build": "ng build",
    "lint": "ng lint",
    "backend": "json-server --watch db.json --port 5000 --delay=1000",
    "serve:fullstack": "concurrently \"npm run backend\" \"npm run serve\"",
    "test": "npx cypress open",
    "test:open": "npx cypress open --browser edge",
    "test:cypress-headed": "npx cypress --headed",
    "tsc:check": "npm run tsc:src && npm run tsc:cypress",
    "tsc:src": "tsc --noEmit --project tsconfig.json",
    "tsc:cypress": "tsc --noEmit --project cypress/tsconfig.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.0",
    "@angular/cdk": "^12.0.0",
    "@angular/common": "~12.0.0",
    "@angular/compiler": "~12.0.0",
    "@angular/core": "~12.0.0",
    "@angular/forms": "~12.0.0",
    "@angular/material": "^12.0.0",
    "@angular/platform-browser": "~12.0.0",
    "@angular/platform-browser-dynamic": "~12.0.0",
    "@angular/router": "~12.0.0",
    "@datorama/akita": "^6.1.2",
    "rxjs": "~6.6.6",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.0",
    "@angular/cli": "~12.0.0",
    "@angular/compiler-cli": "~12.0.0",
    "@angular/language-service": "~12.0.0",
    "@cypress/code-coverage": "^3.9.2",
    "@datorama/akita-ngdevtools": "^6.0.0",
    "@testing-library/cypress": "^7.0.4",
    "@types/istanbul-lib-coverage": "^2.0.3",
    "@types/node": "^14.14.35",
    "@types/uuid": "^8.3.0",
    "codelyzer": "^6.0.1",
    "concurrently": "^6.0.0",
    "cypress": "^6.8.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-testing-library": "^3.10.2",
    "husky": "^4.3.8",
    "istanbul-lib-coverage": "^3.0.0",
    "json-server": "^0.16.3",
    "lint-staged": "^10.5.4",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-node": "~9.1.1",
    "tslint": "~6.1.3",
    "typescript": "~4.2.4",
    "uuid": "^3.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit"
    }
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write"
  }
}
